generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  bio       String?
  name      String?
  image     String?
  createdAt DateTime  @default(now())
  posts     Post[]
  Follower  Follow[]  @relation("FollowerRelation")
  Following Follow[]  @relation("FollowingRelation")
  Like      Like[]
  Comment   Comment[]
  Saved     Saved[]
}

model Follow {
  createdAt  DateTime @default(now())
  followerId Int
  Follower   User     @relation("FollowingRelation", fields: [followerId], references: [id])

  followingId Int
  Following   User @relation("FollowerRelation", fields: [followingId], references: [id])

  @@id(name: "followId", [followerId, followingId])
}

model Post {
  id        Int       @id @default(autoincrement())
  imageUrl  String?
  title     String
  caption   String?
  createdAt DateTime  @default(now())
  User      User      @relation(fields: [userId], references: [id])
  userId    Int
  Like      Like[]
  Comment   Comment[]
  Saved     Saved[]
}

model Saved {
  createAt DateTime @default(now())
  userId   Int
  User     User     @relation(fields: [userId], references: [id])
  postId   Int
  Post     Post     @relation(fields: [postId], references: [id])

  @@id(name: "saveId", [userId, postId])
}

model Like {
  createAt DateTime @default(now())
  userId   Int
  User     User     @relation(fields: [userId], references: [id])
  postId   Int
  Post     Post     @relation(fields: [postId], references: [id])

  @@id(name: "likeId", [userId, postId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  comment   String
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  postId    Int
  Post      Post     @relation(fields: [postId], references: [id])
}
