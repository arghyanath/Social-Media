{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:styles", "build:components"],
      "env": [
                "DATABASE_URL",
                "NEXTAUTH_SECRET",
                "NEXTAUTH_URL",
                "CLOUDINARY_API_KEY",
                "CLOUDINARY_API_SECRET",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_WS_URL"
            ]
    },
    "build:styles": {
      "outputs": ["dist/**"]
    },
    "build:components": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "with": ["dev:styles", "dev:components"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    }
  }
}
