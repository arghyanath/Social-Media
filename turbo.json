{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
             "env": [
                "DATABASE_URL",
                "NEXTAUTH_SECRET",
                "NEXTAUTH_URL",
                "CLOUDINARY_API_KEY",
                "CLOUDINARY_API_SECRET",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_WS_URL"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },

         "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true 
  },
  "db:deploy": {
    "cache": false
  }
    }
}